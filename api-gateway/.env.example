# API Gateway - Routes requests to microservices
NODE_ENV=development
PORT=3000

# Service URLs (Auth Service is the master controller)
AUTH_SERVICE_URL=http://localhost:8000
EDUCATION_SERVICE_URL=http://localhost:8001
MESSAGING_SERVICE_URL=http://localhost:8002
MOBILITY_SERVICE_URL=http://localhost:8003
FINANCE_SERVICE_URL=http://localhost:8004

# Rate Limiting (per 15 minutes)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# JWT/Token Verification
JWT_VERIFY_TIMEOUT_MS=5000

# CORS Configuration
CORS_ORIGIN=*
CORS_CREDENTIALS=false
